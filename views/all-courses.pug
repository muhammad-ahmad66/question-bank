extends base 

block append head 
  link(rel="stylesheet", href="/css/all-courses.css")


block content
  .container
    h1 Courses
    table.course-table
      thead
        tr
          th Course Name
          th Course Code
          th Credits
          th Actions
      tbody
        each course in courses
          tr
            td= course.courseName
            td= course.courseCode
            td= course.credits
            td 
              button.btn Details
              button.btn.btn-delete#btn-delete-course(data-course-id=`${course._id}`) Delete
              button.btn#btn-assign-to(data-course-id=`${course._id}`) Assign To
